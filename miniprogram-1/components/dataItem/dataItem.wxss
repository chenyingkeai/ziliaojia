/* components/dataItem/dataItem.wxss */
.item{
  min-height: 180rpx;
  position:relative;
  vertical-align: middle;
  border-radius: 10rpx;
  margin: 10rpx 20rpx;
  padding-top: 28rpx;
  box-shadow: 0 5rpx 18rpx rgba(51, 51, 51, 0.04);
}
.type{
  /* border: 1rpx solid black; */
  font-size: 28rpx;
  font-weight: 500;
  display: inline-block;
  width: 120rpx;
  position: absolute;
  margin-left: 10rpx;
}
.itemName{
  display: inline-block;
  font-size: 28rpx;
  font-weight: 500;
  width: 420rpx;
  margin-left: 120rpx;
}
.itemImg{
  /* border: 1rpx solid red; */
  position: absolute;
  z-index: -99;
  width: 157rpx;
  height: 160rpx;
}
.itemFollow{
  color: #7ed7b4;
}
.num{
  position: absolute;
  bottom: 25rpx;
}
.itemNum{
  display: inline-block;
  color: #888888;
  font-size: 22rpx;
  margin-right: 20rpx;
}
.numImg{
  width: 22rpx;
  height: 14rpx;
