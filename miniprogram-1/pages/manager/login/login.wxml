<!--pages/manager/login/login.wxml-->
<form  bindsubmit="managerLogin" >
  <image src="/assest/icons/manager/loginBac.png" class="login-bac"  />
  <view class="login-box" >
    <view class="title">
      运营人员登录
    </view>
    <input class="input-class" value="{{loginId}}" type="text"  placeholder="账号" 
          placeholder-class="default-font"  bindinput="input" id="loginId" name="loginId" />
    <input class="input-class" value="{{passWord}}" type="text" placeholder="密码" password="true" 
          placeholder-class="default-font" bindinput="input" id="passWord" name="passWord" />

  </view> 

  <button class="login-btn" form-type="submit" >登录</button>

</form>