  position: relative;
  top: 1rpx;
}
.download{
  float: right;
  margin-right: 28rpx;
}
.loadImg{
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  position: relative;
  left: 12rpx;
}
.loadText{
  color: #46cc95;
  font-size: 24rpx;
}
.searchImg{
  width: 36rpx;
