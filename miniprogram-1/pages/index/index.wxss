/**index.wxss**/
button::after{
  border:none;
}
.banner{
  height: 360rpx;
  border-radius: 20rpx;
  background-color: black;
  text-align: center;
  margin:10rpx 30rpx 30rpx 30rpx;
}
.top{
  text-align: center;
  margin-bottom: 26rpx;
}
.select{
  display: inline-block;
}
.search{
  display: inline-block;
  border-radius:20rpx;
  background-color: #f1f1f1;
  margin-left: 25rpx;
  position: relative;
  top: 3rpx;
}
.title{
  display: inline-block;

}
.selectImg{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 5rpx;
  position: relative;
  bottom: 2rpx;
}
.selectText{
  display:inline-block;
  position: relative;
  top: -8rpx;
  color: #69d5a8;
}
.searchText{
  display: inline-block;
  width: 500rpx;
  height: 50rpx;
  text-align: left;
}
.place-holder{
  font-size: 28rpx;
  margin-top: 5rpx;
  margin-left: 35rpx;
}
/* 遮罩层 */
.mask{
  width:100%;   
  height:100%;   
  top:0;   
  background:rgba(222, 222, 222,0.7);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 1;   
  position: absolute;  
}
.shade{   
  width: 100%;   
  min-height: 428rpx;   
  background-color: white;   
  position: fixed;   
  top: 100rpx;   
  padding-bottom: 20rpx;
  border-radius:0 0 15rpx 15rpx;
  margin-left:auto
}  
.selectBlock{
  margin-left: 30rpx;
  margin-bottom: 60rpx;
}
.selectTitle{
  color: #85e4ba;
  font-size: 30rpx;
  font-weight: 500;
  margin:20rpx;
  margin-bottom: 40rpx;
}

.selectItem{
  /* align-items: center; */
  justify-content: center;
  font-size: 24rpx;
  line-height: 45rpx;
  display: inline-flex;
  flex-wrap: wrap;
  width: 120rpx;
  padding: 0 10rpx;
  border: 3rpx solid #cdcdcd;
  margin:0 8rpx;
  color:#cdcdcd ;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}
.list{
  padding: 0 35rpx;
}
.change{
  padding: 0 35rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
/* 点击 */
.activeTag{
  border: 3rpx solid #bbf9da;
  background-color: #bbf9da;
  color: #76deb1;
}
.closeSelect{
  float: right;
}
.closeSelectBtn{
  display: inline-block;
  width: 150rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  height: 43rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
}
.clear{
  border: 1rpx solid #e09391;
  color: #e09391;
}
.confirm{
  border: 1rpx solid #e09391;
  background-color: #45cb97;
  color: white;
}

.itemNum{
  display: inline-block;
  color: #888888;
  font-size: 22rpx;
  margin-right: 20rpx;
}
.numImg{
  width: 22rpx;
  height: 14rpx;
  margin-right: 4rpx;
  position: relative;
  top: -1rpx;
  margin-left: 10rpx;
}
.searchImg{
  width: 36rpx;
  height: 36rpx;
  margin-left: 25rpx;
}
.select-btn{
  width: 154rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28rpx;
  color: white;
  background-color: #DDDDDD;
  margin-right: 64rpx;
  border-radius: 10rpx;
}
.active{
  background-color: var(--primary-color-) !important;
}