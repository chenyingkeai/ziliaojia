/* components/modal/modal.wxss */
.modal-bag{
  height: 100%;
  width: 750rpx;
  position: fixed;
  top: 0;
  z-index: 6;
}
.modal-box{
  height: 291rpx;
  width: 530rpx;
  background-color: white;
  position: fixed;
  top: 30%;
  left: 100rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 7;
  box-shadow: 0 0 21rpx rgba(0, 0, 0, 0.09);
} 
.title{
  flex: 1;
  margin-top: 22rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title image{
  height: 26rpx;
  width: 26rpx;
  margin-right: 10rpx;
}
.content{
  text-align:center;
  font-size: 26rpx;
  color: #666666;
  padding-top: 30rpx;
  flex: 2;
  width: 100%;
}
.btn-area{
  height: 86rpx;
  font-size: 28rpx;
  color: #999999;
  width: 100%;
  border-top: 1rpx solid #DDDDDD;
  border-radius: 0 0 10rpx 10rpx;
  display: flex;
  flex-direction: row;
}
.btn-area view{
  flex: 1;
  line-height: 86rpx;
  text-align:center;
}
.btn-area view:first-child{
  border-right: 1rpx solid #DDDDDD;
}