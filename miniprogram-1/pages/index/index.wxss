button::after{
  border:none;
}
.headView {
  font-size: 33rpx;
  /* margin:50px auto; */
  text-align: center;
}
.headImageView {
  display: block;
  /* margin-left: 25px; */
  margin-top: 25px;
  margin-right: 25px;
  margin-bottom: 0px;
